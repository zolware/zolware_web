<div id="addProjectDataSourceModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Create new data source</h4>
      </div>
      <div class="modal-body">
        <form role="form" action="/projects/<%= project._id  %>/adddatasource" method="post">
          <div class="form-group">
            <label for="email">Name:</label>
            <input type="text" class="form-control" id="name" name="name">
          </div>
          <div class="form-group">
            <label for="pwd">Description:</label>
            <input type="text" placeholder="optional" class="form-control" id="description" name="description">
          </div>
          
          
          
      <form method="post">
     <div class="form-group ">
      <label class="control-label " for="select">
       Data source type:
      </label>
      <select class="select form-control" id="datasource_type" name="datasource_type">
       <option value="Test signal">
        Test signal
       </option>
        <option value="Test signald">
        other
       </option>
      </select>
     </div>
        
        <div id="test_signals">
          
       
        
     <div class="form-group ">
      <label class="control-label " for="number">
       Columns:
      </label>
      <input class="form-control" id="number" name="number" placeholder="between 1 and 5" type="text"/>
      <span class="help-block" id="hint_number">
       Number of uncorrelated signals (not including timestamp)
      </span>
     </div>
     <div class="form-group" id="div_radio">
      <label class="control-label " for="radio">
       Data
      </label>
      <div class="">
       <label class="radio-inline">
        <input name="radio" type="radio" value="Random normal"/>
        Random normal
       </label>
       <label class="radio-inline">
        <input name="radio" type="radio" value="Random"/>
        Random
       </label>
      </div>
     </div>
     <div class="form-group ">
      <label class="control-label ">
       Additional data components
      </label>
      <div class=" ">
       <div class="checkbox">
        <label class="checkbox">
         <input name="checkbox" type="checkbox" value="Add linear component"/>
         Add linear component
        </label>
       </div>
       <div class="checkbox">
        <label class="checkbox">
         <input name="checkbox" type="checkbox" value="Add periodic component"/>
         Add periodic component
        </label>
       </div>
      </div>
     </div>
        
           </div>
        
        
     <div class="form-group">
      <div>
       <button class="btn btn-primary " name="submit" type="submit">
        Submit
       </button>
      </div>
     </div>
    </form>
          
          
          
          
      
          <input type="hidden" class="form-control" id="project_id" name="project_id" value="<%= project._id %>">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>