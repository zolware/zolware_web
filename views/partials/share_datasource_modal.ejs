<div class="modal fade" id="share-datasource" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Share datasource</h4>
      </div>
      <div class="modal-body">

        <form class="form-horizontal" action="/datasources/<%= datasource._id  %>/share" method="post">
          <fieldset>
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="textinput">Share with user</label>
              <div class="col-md-4">
                <input id="sharewith" name="sharewith" type="text" value="<%= user.local.displayName %>" class="form-control input-md">
              </div>
            </div>
            <button class="btn btn-primary " name="submit" type="submit">
        Submit
       </button>
          </fieldset>
        </form>
        <p>Do you want to proceed?</p>
        <p class="debug-url"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <a class="btn btn-danger btn-ok">Share</a>
      </div>
    </div>
  </div>
</div>